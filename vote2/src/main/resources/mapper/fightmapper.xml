<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
       mamespace：命名空间;指定为接口的全类名可以进行接口绑定
       id：唯一标识
       resultType：返回值类型
-->
<mapper namespace="com.zuoshao.vote.mapper.Fightmapper">
    <select id="selectnewfight" parameterType="int" resultType="com.zuoshao.vote.bean.Fight">
        SELECT * FROM fight where sessionid = #{sessionid} ORDER BY id DESC LIMIT 1
    </select>
</mapper>